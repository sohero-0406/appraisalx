<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jeesite.modules.aa.dao.PictureUserDao">
	
	<!-- 查询数据
	<select id="findList" resultType="PictureUser">
		SELECT ${sqlMap.column.toSql()}
		FROM ${sqlMap.table.toSql()}
		<where>
			${sqlMap.where.toSql()}
		</where>
		ORDER BY ${sqlMap.order.toSql()}
	</select> -->
	<select id="findListByExamUserId" resultType="PictureUser">
		select pictureUser.id,pictureUser.url,pictureType.id,pictureUser.name
		from aa_picture_type as pictureType
		left join aa_picture_user as pictureUser on pictureType.id=pictureUser.picture_type_id
		<where>
			exam_user_id = #{examUserId}
			<if test="pictureTypeIds != null and pictureTypeIds.length > 0">
			and pictureType.id in
			<foreach collection="pictureTypeIds" item="pictureTypeId" index="index" open="(" close=")" separator=",">
				#{pictureTypeId}
			</foreach>
			</if>
		</where>
	</select>
</mapper>